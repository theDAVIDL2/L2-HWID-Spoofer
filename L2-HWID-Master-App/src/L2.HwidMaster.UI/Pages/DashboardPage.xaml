<Page x:Class="L2.HwidMaster.UI.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            
            <!-- Status Cards Row -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- MAC Status Card -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="NET" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="MAC Address" Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="MacStatus" Text="Original" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        <TextBlock x:Name="MacValue" Text="AA:BB:CC:DD:EE:FF" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Volume ID Status Card -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="VOL" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Volume ID" Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="VolumeStatus" Text="Original" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        <TextBlock x:Name="VolumeValue" Text="XXXX-XXXX" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Machine GUID Status Card -->
                <Border Grid.Column="4" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="GUID" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Machine GUID" Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="GuidStatus" Text="Original" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        <TextBlock x:Name="GuidValue" Text="xxxxxxxx-xxxx-..." Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Monitor EDID Status Card -->
                <Border Grid.Column="6" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="EDID" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Monitor EDID" Style="{StaticResource BodyText}"/>
                        <TextBlock x:Name="MonitorStatus" Text="Original" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                        <TextBlock x:Name="MonitorValue" Text="Generic Monitor" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Hardware Fingerprint Section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="Hardware Fingerprint" Style="{StaticResource HeadingMedium}"/>
                        <Button Content="Copy All" Style="{StaticResource SecondaryButton}" 
                                HorizontalAlignment="Right" Padding="16,8" Click="CopyFingerprint_Click"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="NETWORK" Style="{StaticResource MutedText}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel x:Name="NetworkInfo" Margin="0,0,0,16">
                                <TextBlock Text="Loading..." Style="{StaticResource BodyText}"/>
                            </StackPanel>

                            <TextBlock Text="STORAGE" Style="{StaticResource MutedText}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel x:Name="StorageInfo">
                                <TextBlock Text="Loading..." Style="{StaticResource BodyText}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="16,0,0,0">
                            <TextBlock Text="WINDOWS IDS" Style="{StaticResource MutedText}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel x:Name="WindowsInfo" Margin="0,0,0,16">
                                <TextBlock Text="Loading..." Style="{StaticResource BodyText}"/>
                            </StackPanel>

                            <TextBlock Text="DISPLAYS" Style="{StaticResource MutedText}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <StackPanel x:Name="DisplayInfo">
                                <TextBlock Text="Loading..." Style="{StaticResource BodyText}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Quick Actions Section -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Quick Actions" Style="{StaticResource HeadingMedium}" Margin="0,0,0,16"/>
                    
                    <WrapPanel>
                        <Button Style="{StaticResource PrimaryButton}" Margin="0,0,12,12" Click="SpoofAll_Click" Content="Spoof All"/>
                        <Button Style="{StaticResource SecondaryButton}" Margin="0,0,12,12" Click="CreateBackup_Click" Content="Create Backup"/>
                        <Button Style="{StaticResource SecondaryButton}" Margin="0,0,12,12" Click="RestoreOriginal_Click" Content="Restore Original"/>
                        <Button Style="{StaticResource SecondaryButton}" Margin="0,0,12,12" Click="RefreshInfo_Click" Content="Refresh Info"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
