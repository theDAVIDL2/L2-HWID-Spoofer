<Page x:Class="L2.HwidMaster.UI.Pages.PlaceholderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Coming Soon">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <TextBlock x:Name="TitleText" Text="Coming Soon" 
                       Style="{StaticResource HeadingLarge}" 
                       HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock x:Name="DescriptionText" Text="This feature is under development." 
                       Style="{StaticResource BodyText}" 
                       HorizontalAlignment="Center" Opacity="0.7"/>
            <Border Background="{StaticResource CardBrush}" CornerRadius="8" 
                    Padding="24,16" Margin="0,24,0,0" HorizontalAlignment="Center">
                <TextBlock x:Name="StatusText" Text="Check back soon!" 
                           Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
